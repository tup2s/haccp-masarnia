# Baza danych PostgreSQL (Neon.tech)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="postgresql://user:password@host.neon.tech:5432/haccp?sslmode=require"

# Port serwera (opcjonalny, domyślnie 3001)
PORT=3001

# Klucz JWT do autoryzacji (wygeneruj unikalny!)
# Możesz wygenerować: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Środowisko
NODE_ENV="production"
